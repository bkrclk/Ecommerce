@model IEnumerable<ECommerce.Models.Product>
@{
    @if (Model != null && !Model.Count().Equals(0))
    {
        <table id="cart" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:50%">Product</th>
                    <th style="width:10%">Price</th>
                    <th style="width:5%">Quantity</th>
                    <th style="width:20%" class="text-center">Subtotal</th>
                    <th style="width:15%"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {

                    var img = item.Image;
                    <tr>
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-sm-3 hidden-xs"><img src="@img" width="100" height="100" alt="..." class="img-responsive" /></div>
                                <div class="col-sm-9">
                                    <div class="row">
                                        <span class="headertext">@item.ProductName</span>
                                        <p class="ikisatıryazi">@item.Description</p>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td data-th="Price"><label class="form-card" id="labelPrc2">@item.Price</label></td>
                        <td data-th="Quantity">
                            <input type="number" class="form-control text-center" value="1" onchange="PriceUpdate(this.value)">
                        </td>
                        <td data-th="Subtotal" class="text-center"><label class="form-card" id="labelSubTotal">@item.Price</label></td>
                        <td class="actions" data-th="">
                            <button class="btn btn-danger btn-sm" onclick="DeleteProduct(@item.Id)"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>

                }
            </tbody>
            <tfoot>
                <tr>
                    <td><a href="#" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
                    <td colspan="2" class="hidden-xs"></td>
                    <td class="hidden-xs text-center"><strong>Total $1000</strong></td>
                    <td><a href="#" class="btn btn-success">Checkout <i class="fa fa-angle-right"></i></a></td>
                </tr>
            </tfoot>
        </table>
    }
    else
    {
        <div class="row emptycard">
            <div class="col-md-3">
                <img src="~/img/shopping-cart.png" />
            </div>
            <div class="col-md-9" style="margin-top:15px">
                Sepetinizde ürün bulunmamaktadır.
                Alışverişe devam etmek için <a href="/Home/Index">buraya</a> Tıklayınız.
            </div>

        </div>
    }
}